<nav class="container-fluid" >
    <ul>
        <li>
            <a href="/"><strong>Home</strong></a>
        </li>
    </ul>
    <ul>
        
        <% if(!locals.isAdmin){ %>
        <li><a href="/products" >Products</a></li>
        <li><a href="/cart">Cart <sup><mark class="badge"><%=locals.cart.items.length %></mark></sup></a></li>
        <% } %>

        <% if(locals.isAuth && !locals.isAdmin){ %>
        <li><a href="/orders">Orders</a></li>
        <% } %>

        <% if(locals.isAdmin){ %>
        <li><a href="/admin/products">Manage Products</a></li>
        <li><a href="/admin/orders">Manage Orders</a></li>
        <% } %>
            
        <% if(!locals.isAuth){ %>
        <li><a href="/login" role="button">Login</a></li>
        <li><a href="/signup" role="button">Signup</a></li>
        <% } %>

        <% if(locals.isAuth){ %>
        <li>
            <form action="/logout" method="POST" id="logout-form" style="margin-bottom: 0;">
                <input type="hidden" value="<%= locals.csrfToken %>" name="_csrf"/>
                <button class="button" id="logout-btn">logout</button>
            </form>
        </li>
        <% } %>
    </ul>
</nav>
<br>
