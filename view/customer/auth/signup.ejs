<!DOCTYPE html>
<html lang="en" data-theme="dark">
<%-include("../../includes/head", {page_title: "Signup"}) %>
<body>
    <%-include("../../includes/header") %>
    <main class="container">
        <article class="card">
            <h1>Create a New Account</h1>
            <% if(cache.has_error === true){ %>
            <h4 style="color: brown"><%=cache.message %></h4>
            <p>111</p>
            <% } %>
            <form action="/signup" method="POST" id="signup-form">
                <input type="hidden" value="<%= locals.csrfToken %>" name="_csrf">
                <div class="form-control">
                    <label for="email">Email Address</label>
                    <input type="email" name="email" id="email" placeholder="Email Address" value="<%=cache.data.email %>" aria-invalid="<%=cache.hint.email %>" required>
                </div>
                <div class="form-control">
                    <label for="password">Set Password</label>
                    <input type="password" name="password" id="password" placeholder="Password" minlength="6" aria-invalid="<%=cache.hint.password %>"  required>                
                </div>
                <div class="form-control">
                    <label for="password-confirm">Confirm Password</label>
                    <input type="password" name="password-confirm" id="password-confirm" placeholder="Password" minlength="6" aria-invalid="<%=cache.hint.password %>" required>                
                </div>
                <div class="form-control grid">
                    <label for="first-name">
                        First name
                        <input type="text" id="first-name" name="first-name" placeholder="First name"  value="<%=cache.data.first_name %>" aria-invalid="<%=cache.hint.first_name %>" required>
                    </label>
                    <label for="last-name">
                        Last name
                        <input type="text" id="last-name" name="last-name" placeholder="Last name"  value="<%=cache.data.last_name %>" aria-invalid="<%=cache.hint.last_name %>" required>
                    </label>
                </div>
                <div class="form-control">
                    <label for="phone-number">Phone Number</label>
                    <input type="tel" name="phone-number" id="phone-number" placeholder="Phone Number"  value="<%=cache.data.phone_number %>" aria-invalid="<%=cache.hint.phone_number %>" minlength="7" maxlength="11" required>                
                </div>
                <div class="form-control">
                    <label for="ashipping-address">Shipping Address</label>
                    <input type="text" name="shipping-address" id="shipping-address" placeholder="shipping Address"  value="<%=cache.data.shipping_address %>" aria-invalid="<%=cache.hint.shipping_address %>" required>                
                </div>
                <label for="terms">
                    <input type="checkbox" id="terms" name="terms" required>
                    I agree to the Terms and Conditions
                </label>
                <br>
                <button class="button" id="signup-btn">Create my account!</button>
            </form>
            <p id="login-instead" style="text-align: center;"><a href="/login">Login</a> instead</p>
        </article>
    </main>
    <%-include("../../includes/footer") %>
</body>
</html>